<html>
  <head>
    <title>CouchDB - NodeJS</title>
  </head>
  <style>
    body {
      text-align: center;
    }
    h3 {
      font-size: 45px;
    }
    h4 {
      font-size: 35px;
      text-decoration: underline;
    }

    label {
      font-size: 30px;
    }
    ul {
      margin-left: 38%;
    }
    li {
      inline-size: 350px;
    }
  </style>

  <body>
    <h3>Add Coffee:</h3>
    <% if(errors != undefined){ %>
      <ul>
        <% errors.forEach(function(error){ %>
        <li style="color: red"><%= error.msg %></li>
        <% }) %>
      </ul>
      <% } %>

    <form method="POST" action="/coffee/add">
      <label>Coffee Name:</label><br />
      <input type="text" size="50" name="name" /><br />

      <br />
      <label>Coffee Type(Drinkable):</label><br />
      <input type="radio" name="coffee_type" id="hot" value="hot" />HOT
      <input type="radio" name="coffee_type" id="cold" value="cold" />COLD<br />
      <br />

      <label>Flavor:</label><br />
      <input type="text" size="50" name="flavor" /><br />
      <br />
      <input type="hidden" size="50" name="review" />
      <input type="submit" value="Submit" />

    </form>
    <h4>All Coffee</h4>
    <ul>
      <% allcoffee.forEach(function(coffee){ %>
      <li>
        <%= coffee.doc.name %> - <%= coffee.doc.flavor %> - <%=
        coffee.doc.coffee_type %> Drink
        <br />
        <br />
       
      </li>
      <% }); %>
    </ul>
  </body>
</html>
